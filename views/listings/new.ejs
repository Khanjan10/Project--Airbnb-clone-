<% layout("/layouts/boilerplate") %>
<body>
    <h2 class="mt-4 offset-2">Create New Listing</h2>
    <div class="row mt-4">
        <div class="col-8 offset-2">
            
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
                <div class="valid-feedback">Looks Good</div>
                <div class="invalid-feedback">Please enter valid title</div>
            </div>
            <br>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter description</div>
            </div>
            <br>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input name="listing[image]" placeholder="Enter image/URL" type="file" class="form-control"required>
            </div>
            <br>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Enter price" class="form-control" required>
                <div class="invalid-feedback">Please enter valid price</div>
            </div>
            <br>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter location</div>
                </div>

                <div class="mb-3 col-md-6">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter country</div>
                </div>
            </div>
            <br>
            <button class="btn mb-4 add-btn">Add</button>
        </form>
</div>
</div>
</body>
</html>